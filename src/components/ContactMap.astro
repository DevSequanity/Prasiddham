---
// Contact Map Section Component
---

<section class="py-20 bg-gray-50">
  <div class="container mx-auto px-4">
    <div class="max-w-6xl mx-auto">
      <!-- Section Header -->
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
          Find Us
        </h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Visit our studio to see our work in person and discuss your interior design project with our team.
        </p>
      </div>
      
      <div class="grid lg:grid-cols-2 gap-16 items-center">
        <!-- Location Information -->
        <div class="space-y-8">
          <div>
            <h3 class="text-2xl font-bold text-gray-900 mb-6">Studio Location</h3>
            
            <div class="space-y-6">
              <!-- Address Details -->
              <div class="bg-white p-6 rounded-xl shadow-sm">
                <div class="flex items-start space-x-4">
                  <div class="w-12 h-12 bg-amber-100 rounded-full flex items-center justify-center flex-shrink-0">
                    <svg class="w-6 h-6 text-amber-600" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"></path>
                    </svg>
                  </div>
                  <div>
                    <h4 class="font-semibold text-gray-900 mb-2">Prasiddham Interior</h4>
                    <p class="text-gray-600 mb-2">51K Growth Hub Rd, Nigam Nagar, Chandkheda</p>
                    <p class="text-gray-600">Ahmedabad, Gujarat 382424</p>
                  </div>
                </div>
              </div>
              
              <!-- Contact Details -->
              <div class="bg-white p-6 rounded-xl shadow-sm">
                <h4 class="font-semibold text-gray-900 mb-4">Contact Information</h4>
                <div class="space-y-3">
                  <div class="flex items-center space-x-3">
                    <svg class="w-5 h-5 text-amber-600" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"></path>
                    </svg>
                    <span class="text-gray-600">+91 7210812345</span>
                  </div>
                  <div class="flex items-center space-x-3">
                    <svg class="w-5 h-5 text-amber-600" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"></path>
                      <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"></path>
                    </svg>
                    <span class="text-gray-600">prasiddhaminterior@gmail.com</span>
                  </div>
                </div>
              </div>
              
              <!-- Working Hours -->
              <div class="bg-white p-6 rounded-xl shadow-sm">
                <h4 class="font-semibold text-gray-900 mb-4">Working Hours</h4>
                <div class="space-y-2 text-gray-600">
                  <div class="flex justify-between">
                    <span>Monday - Saturday</span>
                    <span>10:30 AM to 6:00 PM</span>
                  </div>
                  <div class="flex justify-between">
                    <span>Sunday</span>
                    <span>Closed</span>
                  </div>
                </div>
              </div>
              
              <!-- Directions -->
              <div class="bg-amber-50 p-6 rounded-xl">
                <h4 class="font-semibold text-gray-900 mb-3">Getting Here</h4>
                <p class="text-gray-600 text-sm mb-4">
                  Located at Chandkheda in Ahmedabad. Easy access via public transport and ample parking available.
                </p>
                <a 
                  href="https://maps.app.goo.gl/ui6bdXgzf61ashWg6"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex items-center text-amber-600 hover:text-amber-700 font-medium transition-colors"
                >
                  <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                  </svg>
                  Get Directions
                </a>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Map -->
        <div class="relative">
          <div class="bg-white p-4 rounded-xl shadow-lg">
            <div class="aspect-video rounded-lg overflow-hidden">
              <iframe 
                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d1834.836622044464!2d72.59125337056958!3d23.10905440384943!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x395e83c4f3315147%3A0x8f6354328d7e028!2sPrasiddham%20interior%20by%20maalizz%20ventures!5e0!3m2!1sen!2sin!4v1754965955026!5m2!1sen!2sin"
                width="100%" 
                height="100%" 
                style="border:0;" 
                allowfullscreen="" 
                loading="lazy" 
                referrerpolicy="no-referrer-when-downgrade"
                title="J Design Studio Location"
              ></iframe>
            </div>
            <div class="mt-4 text-center">
              <p class="text-sm text-gray-600">Click on the map to open in Google Maps</p>
            </div>
          </div>
          
          <!-- Map Overlay Info -->
          <div class="absolute top-4 left-4 bg-white p-3 rounded-lg shadow-md">
            <div class="flex items-center space-x-2">
              <div class="w-3 h-3 bg-amber-500 rounded-full"></div>
              <span class="text-sm font-medium text-gray-900">Prasiddham Interior</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
