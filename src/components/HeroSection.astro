---
import { Image } from "astro:assets";

// Modular HeroSection component
// Props: title, subtitle, image (Astro image import)
const { title = "", subtitle = "", image = undefined } = Astro.props;
---

<section class="relative py-24 overflow-hidden">
  {
    image && (
      <div class="absolute inset-0 w-full h-full">
        <Image
          src={image}
          alt={image.alt || title}
          class="w-full h-full object-cover object-center"
          style="filter: brightness(0.93);"
          loading="eager"
        />
        <div class="absolute inset-0 bg-gradient-to-br from-amber-400/40 via-orange-500/20 to-amber-900/50 mix-blend-multiply" />
        <div class="absolute inset-0 bg-gradient-to-t from-white/5 to-transparent" />
      </div>
    )
  }
  <div class="relative z-10 max-w-4xl mx-auto px-4 flex justify-center">
    <div
      class="w-full bg-white/60 md:bg-white/50 border border-orange-200/60 rounded-3xl shadow-xl px-6 py-12 md:py-16 md:px-12 backdrop-blur-sm"
    >
      <h1
        class="text-5xl md:text-6xl font-extrabold text-orange-700 drop-shadow-lg mb-6 tracking-tight"
      >
        {title}
      </h1>
      {
        subtitle && (
          <p class="text-xl md:text-2xl text-amber-700 font-medium mb-8 max-w-2xl mx-auto">
            {subtitle}
          </p>
        )
      }
      <slot name="cta" />
    </div>
  </div>
</section>
