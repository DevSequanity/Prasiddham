---

<footer class="bg-gray-800 text-gray-200">
  <div class="max-w-7xl mx-auto px-4 py-10 sm:px-6 lg:px-8">

    <!-- Grid container: mobile-first stacks, becomes 4 cols on md+ -->
    <div class="grid grid-cols-1 gap-8 md:grid-cols-4 md:items-start">

      <!-- Company block (full width on mobile, col 1 on desktop) -->
      <div class="order-1">
        <div class="flex items-center gap-3">
          <Image src={footerData.company.logo} alt={footerData.company.name} class="h-12 w-auto" />
          <div>
            <h4 class="text-lg font-semibold text-gray-100">{footerData.company.name}</h4>
            <p class="text-xs text-amber-200">Interior Design • Ahmedabad</p>
          </div>
        </div>

        <p class="mt-4 text-sm leading-relaxed text-gray-300">
          {footerData.company.description}
        </p>

        <!-- Social icons: subtle hint of orange/amber -->
        <div class="flex items-center mt-4 space-x-3">
          {footerData.socialLinks.map((link) => (
            <a
              href={link.url}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center justify-center p-2 rounded-full bg-gray-700 hover:bg-orange-500/30 focus:bg-orange-500/40 transition"
              aria-label={link.name}
            >
              <svg class="w-5 h-5 text-amber-200 group-hover:text-orange-400 transition-colors" viewBox="0 0 24 24" role="img" aria-hidden="true">
                <path d={link.icon} fill="currentColor" />
              </svg>
            </a>
          ))}
        </div>
      </div>

      <!-- Quick links: mobile = matrix (2 columns), desktop = vertical list -->
      <div class="order-2">
        <h3 class="text-lg font-semibold text-gray-100 mb-3">Quick Links</h3>

        <!-- mobile: grid; md: vertical list -->
        <ul class="grid grid-cols-2 gap-2 md:block md:space-y-2">
          {footerData.quickLinks.map((link) => (
            <li>
              <a
                href={link.url}
                class="flex items-center gap-3 p-2 rounded-md hover:bg-gray-700 transition"
              >
                <span class="inline-flex items-center justify-center w-9 h-9 rounded-md bg-gray-700 group-hover:bg-orange-500/20 transition">
                  <svg class="w-4 h-4 text-amber-200 group-hover:text-orange-400 transition-colors" viewBox="0 0 24 24" aria-hidden="true">
                    <path d={link.icon} fill="currentColor" />
                  </svg>
                </span>
                <span class="text-sm text-gray-200">{link.name}</span>
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Contact info -->
      <div class="order-3">
        <h3 class="text-lg font-semibold text-gray-100 mb-3">Contact Us</h3>
        <ul class="space-y-3">
          {footerData.contactInfo.map((item) => (
            <li class="flex items-start gap-3">
              <span class="inline-flex items-center justify-center w-9 h-9 rounded-md bg-gray-700 group-hover:bg-orange-500/20 transition flex-shrink-0">
                <svg class="w-4 h-4 text-amber-200 group-hover:text-orange-400 transition-colors" viewBox="0 0 24 24" aria-hidden="true">
                  <path d={item.icon} fill="currentColor" />
                </svg>
              </span>

              <div class="text-sm">
                {item.href ? (
                  <a href={item.href} class="hover:underline text-gray-200">
                    {item.value}
                  </a>
                ) : (
                  <span class="text-gray-200">{item.value}</span>
                )}
                <div class="text-xs text-gray-400 mt-0.5">{item.type}</div>
              </div>
            </li>
          ))}
        </ul>
      </div>

      <!-- Map (mobile full width below, desktop as right-most column) -->
      <div class="order-4">
        <h3 class="text-lg font-semibold text-gray-100 mb-3">Find Us</h3>
        <div class="rounded-lg overflow-hidden border-2 border-gray-700">
          <iframe
            src={footerData.mapConfig.embedUrl}
            title={footerData.mapConfig.title}
            class="w-full h-100 sm:h-40 md:h-40"
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"
          ></iframe>
        </div>
      </div>
    </div>

    <!-- divider + copyright -->
    <div class="border-t border-gray-700 mt-8 pt-6 text-center text-sm">
      <p class="text-gray-400">
        &copy; {footerData.copyright.year} {footerData.company.name}. {footerData.copyright.text}
      </p>
    </div>
  </div>
</footer>
