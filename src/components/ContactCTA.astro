---
// Contact CTA Section Component
---

<section class="py-20 bg-gradient-to-br from-amber-50 to-orange-100 relative overflow-hidden">
  <div class="relative z-10 container mx-auto px-4">
    <div class="max-w-6xl mx-auto">
      <div class="grid lg:grid-cols-2 gap-16 items-center">
        <!-- CTA Content -->
        <div class="text-center lg:text-left">
          <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900 mb-6">
            Transform Your Space Today
          </h2>
          <p class="text-xl text-gray-600 mb-8 leading-relaxed">
            Ready to create the home of your dreams? Book a free consultation with our expert interior designers and let's bring your vision to life.
          </p>
          
          <!-- Features -->
          <div class="grid sm:grid-cols-2 gap-6 mb-8">
            <div class="flex items-center space-x-3">
              <div class="w-8 h-8 bg-amber-100 rounded-full flex items-center justify-center">
                <svg class="w-4 h-4 text-amber-600" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <span class="text-gray-700 font-medium">Free Consultation</span>
            </div>
            
            <div class="flex items-center space-x-3">
              <div class="w-8 h-8 bg-amber-100 rounded-full flex items-center justify-center">
                <svg class="w-4 h-4 text-amber-600" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <span class="text-gray-700 font-medium">Expert Designers</span>
            </div>
            
            <div class="flex items-center space-x-3">
              <div class="w-8 h-8 bg-amber-100 rounded-full flex items-center justify-center">
                <svg class="w-4 h-4 text-amber-600" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <span class="text-gray-700 font-medium">Custom Solutions</span>
            </div>
            
            <div class="flex items-center space-x-3">
              <div class="w-8 h-8 bg-amber-100 rounded-full flex items-center justify-center">
                <svg class="w-4 h-4 text-amber-600" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <span class="text-gray-700 font-medium">Quality Materials</span>
            </div>
          </div>
          
          <!-- CTA Buttons -->
          <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
            <button
              type="button"
              class="bg-amber-600 hover:bg-amber-700 text-white px-8 py-4 rounded-lg font-semibold text-lg transition-colors duration-200 shadow-lg hover:shadow-xl"
              onclick="window.scrollTo({ top: 0, behavior: 'smooth' })"
            >
              Book Free Consultation
            </button>
            <a href="tel:+917210812345" class="border-2 border-amber-600 text-amber-600 hover:bg-amber-600 hover:text-white px-8 py-4 rounded-lg font-semibold text-lg transition-colors duration-200 inline-block text-center">
              Call Us Today
            </a>
          </div>
          
          <!-- Contact Info -->
          <div class="mt-8 text-center lg:text-left">
            <p class="text-gray-600 mb-2">Or call us directly:</p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start items-center">
              <a href="tel:+917210812345" class="text-amber-600 hover:text-amber-700 font-semibold text-lg transition-colors">
                +91 7210812345
              </a>
            </div>
          </div>
        </div>
        
        <!-- Interior Design Image -->
        <div class="relative">
          <div class="bg-white p-6 rounded-2xl shadow-xl">
            <div class="aspect-square rounded-xl overflow-hidden bg-gradient-to-br from-amber-100 to-orange-200">
              <img 
                src="https://images.unsplash.com/photo-1586023492125-27b2c045efd7?w=600&h=600&fit=crop&crop=center" 
                alt="Luxury Interior Design"
                class="w-full h-full object-cover"
                loading="lazy"
              />
            </div>
            
            <!-- Floating Elements -->
            <div class="absolute -top-4 -right-4 w-16 h-16 bg-amber-500 rounded-full flex items-center justify-center shadow-lg">
              <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
            </div>
            
            <div class="absolute -bottom-4 -left-4 w-20 h-20 bg-orange-500 rounded-full flex items-center justify-center shadow-lg">
              <svg class="w-10 h-10 text-white" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
              </svg>
            </div>
          </div>
          
          <!-- Stats Overlay -->
          <div class="absolute bottom-6 right-6 bg-white/90 backdrop-blur-sm p-4 rounded-lg shadow-lg">
            <div class="text-center">
              <div class="text-2xl font-bold text-amber-600">200+</div>
              <div class="text-sm text-gray-600">Projects Completed</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  
</section>
