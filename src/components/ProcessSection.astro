---
// Process Section Component - Now extensible with same styling

// Process steps configuration - easily modifiable
const processSteps = [
  {
    number: 1,
    title: "Discovery",
    description: "We begin with a comprehensive consultation to understand your vision, lifestyle, and requirements."
  },
  {
    number: 2,
    title: "Design",
    description: "Our team creates detailed concepts, mood boards, and 3D visualizations to bring your vision to life."
  },
  {
    number: 3,
    title: "Execution",
    description: "We manage the entire project from procurement to installation, ensuring quality at every step."
  },
  {
    number: 4,
    title: "Completion",
    description: "Final styling, quality checks, and handover of your beautifully transformed space."
  }
];

// Component configuration - easily customizable
const config = {
  title: "Our Design Process",
  subtitle: "We follow a systematic approach to ensure every project is executed with precision and creativity.",
  ctaText: "Start Your Project",
  ctaLink: "/contact"
};
---

<section class="py-20 bg-white">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold text-orange-700 mb-6">
        {config.title}
      </h2>
      <p class="text-xl text-orange-600 max-w-3xl mx-auto leading-relaxed">
        {config.subtitle}
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 max-w-6xl mx-auto">
      {processSteps.map((step, index) => (
        <div class="text-center">
          <div class="relative mb-6">
            <div class="w-20 h-20 bg-gradient-to-br from-amber-400 to-orange-400 rounded-full flex items-center justify-center mx-auto">
              <span class="text-2xl font-bold text-white">{step.number}</span>
            </div>
            {index < processSteps.length - 0 && (
              <div class="hidden lg:block static top-20 left-full w-full h-0.5 bg-gradient-to-r from-orange-400 to-amber-400 transform"></div>
            )}
          </div>
          <h3 class="text-xl font-bold text-orange-700 mb-3">{step.title}</h3>
          <p class="text-orange-600 leading-relaxed">
            {step.description}
          </p>
        </div>
      ))}
    </div>

    <div class="text-center mt-16">
      <a href={config.ctaLink} class="inline-flex items-center bg-gradient-to-r from-amber-500 to-orange-500 hover:from-amber-600 hover:to-orange-600 text-white px-8 py-4 rounded-lg font-semibold transition-all duration-300 transform hover:scale-105">
        {config.ctaText}
        <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
        </svg>
      </a>
    </div>
  </div>
</section>
