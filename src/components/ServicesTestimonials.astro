---
// filepath: c:\Users\Admin\Desktop\learn_astro\Prasiddham\src\components\ServicesTestimonials.astro
// Services Testimonials Component
const {
  title = "What Our Clients Say",
  subtitle = "Don't just take our word for it. Here's what our satisfied clients have to say about our interior design services.",
  testimonials = [
    {
      name: "Arjun Mehta",
      initial: "A",
      role: "Residential Client",
      text: "Working with the team was seamless. They delivered a modern yet cozy design, paying attention to every detail. We absolutely love our new living room.",
      stars: 5,
    },
    {
      name: "Ananya Singh",
      initial: "A",
      role: "Commercial Client",
      text: "The office redesign has elevated our workspace. The layout promotes collaboration and the design is both functional and stylish.",
      stars: 5,
    },
    {
      name: "Rahul Verma",
      initial: "R",
      role: "Kitchen Renovation Client",
      text: "Our kitchen renovation exceeded all expectations. The team was professional, punctual, and creative. We now have our dream kitchen!",
      stars: 5,
    },
  ]
} = Astro.props;
---

<section class="py-20 bg-gradient-to-br from-orange-50 to-amber-50">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold text-orange-700 mb-6">
        {title}
      </h2>
      <p class="text-xl text-orange-600 max-w-3xl mx-auto leading-relaxed">
        {subtitle}
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-6xl mx-auto">
      {testimonials.map((t) => (
        <div class="bg-white rounded-2xl p-8 shadow-lg hover:shadow-xl transition-all duration-300">
          <div class="flex items-center mb-6">
            <div class="w-12 h-12 bg-gradient-to-br from-amber-400 to-orange-400 rounded-full flex items-center justify-center text-white font-bold text-lg mr-4">
              {t.initial}
            </div>
            <div>
              <h4 class="font-bold text-orange-700">{t.name}</h4>
              <p class="text-orange-600 text-sm">{t.role}</p>
            </div>
          </div>
          <p class="text-orange-700 leading-relaxed mb-4">
            "{t.text}"
          </p>
          <div class="flex text-amber-500">
            {[...Array(t.stars)].map((_, i) => (
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20" key={i}>
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
              </svg>
            ))}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

