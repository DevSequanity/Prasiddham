---
import Layout from '../layouts/Layout.astro';
interface Props {
  error: unknown;
}

const { error } = Astro.props;
---

<Layout>
    <section style="text-align:center; padding:4rem 1rem;">
        <h1 style="font-size:3rem; margin-bottom:1rem;">404</h1>
        <p style="font-size:1.25rem; margin-bottom:2rem;">Sorry, the page you are looking for does not exist.</p>
        <a href="/" style="color:#0070f3; text-decoration:underline;">Go back home</a>
        <!-- <div>{error instanceof Error ? error.message : "Unknown error"}</div> -->
    </section>
</Layout>