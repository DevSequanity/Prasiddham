---
import Layout from "../../layouts/Layout.astro";
import { getCollection } from "astro:content";

// Get all blog posts and sort by publication date
const posts = await getCollection("blog");
const sortedPosts = posts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

// Get unique tags for filtering
const allTags = [...new Set(posts.flatMap(post => post.data.tags))];
---

<Layout>
  <section class="py-20 bg-gradient-to-br from-orange-50 to-amber-50">
    <div class="container mx-auto px-4">
      <!-- Blog Header -->
      <div class="text-center mb-16">
        <h1 class="text-4xl md:text-6xl font-bold text-gray-900 mb-6">
          Interior Design <span class="text-orange-600">Blog</span>
        </h1>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
          Discover the latest trends, tips, and insights in interior design. From renovation guides to style inspiration, 
          we share everything you need to create beautiful, functional spaces.
        </p>
      </div>

      <!-- Featured Post -->
      {sortedPosts.filter(post => post.data.featured).length > 0 && (
        <div class="mb-16">
          {(() => {
            const featuredPost = sortedPosts.find(post => post.data.featured);
            if (!featuredPost) return null;
            return (
              <div class="bg-white rounded-2xl shadow-lg overflow-hidden">
                <div class="md:flex">
                  <div class="md:w-1/2 p-8">
                    <div class="mb-4">
                      <span class="bg-orange-100 text-orange-700 px-3 py-1 rounded-full text-sm font-medium">
                        Featured
                      </span>
                      <span class="text-gray-500 ml-4">
                        {new Date(featuredPost.data.pubDate).toLocaleDateString('en-US', {
                          year: 'numeric',
                          month: 'long',
                          day: 'numeric'
                        })}
                      </span>
                    </div>
                    <h2 class="text-3xl font-bold text-gray-900 mb-4">
                      {featuredPost.data.title}
                    </h2>
                    <p class="text-gray-600 mb-6 leading-relaxed">
                      {featuredPost.data.description}
                    </p>
                    <div class="flex flex-wrap gap-2 mb-6">
                      {featuredPost.data.tags.map((tag) => (
                        <span class="bg-gray-100 text-gray-700 px-3 py-1 rounded-full text-sm">
                          {tag}
                        </span>
                      ))}
                    </div>
                    <a 
                      href={`/blog/${featuredPost.slug}`}
                      class="inline-flex items-center bg-gradient-to-r from-orange-600 to-amber-600 hover:from-orange-700 hover:to-amber-700 text-white px-6 py-3 rounded-lg font-semibold transition-all duration-300 transform hover:scale-105"
                    >
                      Read More
                      <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                      </svg>
                    </a>
                  </div>
                  <div class="md:w-1/2 bg-gradient-to-br from-orange-100 to-amber-100 flex items-center justify-center p-8">
                    <div class="text-center">
                      <div class="w-24 h-24 bg-gradient-to-br from-orange-400 to-amber-400 rounded-full flex items-center justify-center mx-auto mb-4">
                        <svg class="w-12 h-12 text-white" fill="currentColor" viewBox="0 0 24 24">
                          <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
                        </svg>
                      </div>
                      <p class="text-orange-700 font-semibold">Featured Article</p>
                    </div>
                  </div>
                </div>
              </div>
            );
          })()}
        </div>
      )}

      <!-- All Posts Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {sortedPosts.map((post) => (
          <a href={`/blog/${post.slug}`} class="group block focus:outline-none" tabindex="0">
            <article class="bg-white rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 overflow-hidden cursor-pointer group-hover:ring-2 group-hover:ring-orange-200 group-focus:ring-2 group-focus:ring-orange-300">
              <div class="p-6">
                <div class="mb-4">
                  <span class="text-orange-600 font-semibold text-sm">
                    {new Date(post.data.pubDate).toLocaleDateString('en-US', {
                      year: 'numeric',
                      month: 'short',
                      day: 'numeric'
                    })}
                  </span>
                  {post.data.author && (
                    <span class="text-gray-500 text-sm ml-4">by {post.data.author}</span>
                  )}
                </div>
                <h3 class="text-xl font-bold text-gray-900 mb-3 line-clamp-2">
                  {post.data.title}
                </h3>
                <p class="text-gray-600 mb-4 leading-relaxed line-clamp-3">
                  {post.data.description}
                </p>
                {post.data.tags && post.data.tags.length > 0 && (
                  <div class="flex flex-wrap gap-2 mb-4">
                    {post.data.tags.slice(0, 3).map((tag) => (
                      <span class="bg-gray-100 text-gray-700 px-2 py-1 rounded-full text-xs">
                        {tag}
                      </span>
                    ))}
                    {post.data.tags.length > 3 && (
                      <span class="text-gray-500 text-xs">+{post.data.tags.length - 3} more</span>
                    )}
                  </div>
                )}
                <span class="inline-flex items-center text-orange-600 group-hover:text-orange-700 font-semibold transition-colors duration-300">
                  Read More
                  <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                </span>
              </div>
            </article>
          </a>
        ))}
      </div>

    </div>
  </section>
</Layout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
